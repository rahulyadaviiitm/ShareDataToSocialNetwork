<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rahul.sharedata.MainActivity"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/img_fruitt"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/apple"/>

    <ImageView
        android:id="@+id/img_bookk"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/bookk"/>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Tittle:"/>
            <TextView
                android:id="@+id/txt_title"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VDUSVDUUBIDB"/>

</LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Description:"/>
            <TextView
                android:id="@+id/txt_description"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DTUAKSV  IUDGIUDG  HUIDG IGD  DIUGD   UG"/>

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share Your Product:"/>

    <LinearLayout
        android:layout_marginTop="48dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
   <ImageView
       android:id="@+id/img_whatsapp"
    android:layout_width="56dp"
    android:layout_height="56dp"
    android:src="@drawable/bwhatsapp"/>
        <ImageView
            android:id="@+id/img_fb"
            android:layout_marginLeft="8dp"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/fb"/>
        <ImageView
            android:id="@+id/img_google"
            android:layout_marginLeft="8dp"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/hang"/>

        <ImageView
            android:id="@+id/img_slack"
            android:layout_marginLeft="8dp"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/mslack"/>
        <ImageView
            android:id="@+id/img_more"
            android:layout_marginLeft="8dp"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/dot"/>
    </LinearLayout>





</LinearLayout>
